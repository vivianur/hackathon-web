{
  "name": "mindease-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:dashboard\" \"npm run dev:tasks\" \"npm run dev:profile\" \"npm run dev:shell\"",
    "dev:shell": "npm run dev -w @mindease/shell",
    "dev:dashboard": "npm run dev -w @mindease/dashboard",
    "dev:tasks": "npm run dev -w @mindease/tasks",
    "dev:profile": "npm run dev -w @mindease/profile",
    "dev:shared": "echo 'Shared package ready'",
    "build": "npm run build --workspaces --if-present",
    "build:shell": "npm run build -w @mindease/shell",
    "build:dashboard": "npm run build -w @mindease/dashboard",
    "build:tasks": "npm run build -w @mindease/tasks",
    "build:profile": "npm run build -w @mindease/profile",
    "preview": "npm run preview --workspaces --if-present",
    "lint": "eslint .",
    "dev:legacy": "vite",
    "build:legacy": "tsc -b && vite build",
    "preview:legacy": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/x-data-grid": "^8.24.0",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@originjs/vite-plugin-federation": "^1.3.6",
    "@types/node": "^24.10.7",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "json-server": "^1.0.0-beta.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
